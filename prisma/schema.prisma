generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  login     String
  password  String
  createdAt DateTime @default(now())
}

enum Plan {
  none
  free
  pro
}

model User {
  id            Int            @id @default(autoincrement())
  chatId        String
  userId        String         @unique
  firstName     String
  lastName      String
  userName      String
  plan          Plan           @default(none)
  requestsCount Int            @default(0)
  createdAt     DateTime       @default(now())
  notFoundFiles NotFoundFile[]
  payments      Payments[]
}

enum ServiceName {
  ui8_net
  craftwork_design
  ls_graphics
  uihut_com
  pixsellz_io
  spline_one
}

model File {
  id          Int         @id @default(autoincrement())
  url         String
  title       String?
  downloadUrl String
  serviceName ServiceName
  price       String
}

model NotFoundFile {
  id          Int         @id @default(autoincrement())
  url         String
  serviceName ServiceName
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
}

model Payments {
  uuid      String   @id @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  messageId String
  createdAt DateTime @default(now())
}
